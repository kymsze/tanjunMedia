    %link{href: '/assets/application.css', rel: "stylesheet"}/

  %body
    #fullpage

      .section.section1
        .navigation
          .navbg
          %ul.nav#nav1

            %li
              %a{:href => "#thirdPage/1"} Who we are
            %li
              %a{:href => "#fourthPage/1'"} What we deliver

          %ul.nav.navlogo
            %li
              %a{:href => "#secondPage/1"}
                %img(src='/assets/img/CombinationMarkV1Dark.png')

          %ul.nav#nav2
            %li
              %a{:href => "#thirdPage/1"} Who we work with
            %li
              %a{:href => "#fourthPage/1'"} Get in touch

        .logo
          %img(src='/assets/img/CombinationMarkV1Dark.png')

        .hero-footer
          .triangle.triangle-up.triangle-right
            .triangle-after.triangle-up-after.triangle-right-after
          .triangle.triangle-up.triangle-left
            .triangle-after.triangle-up-after.triangle-left-after

      .section
